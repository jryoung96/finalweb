@*
	입고내역
	pk(입고번호) 부품명 수량 거래처 입고날짜 담당자

*@
@model List<Web_Final.Models.WareHouse.InBound>
@{
	int row_count = 1;
}
<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
	<div class="card">
		<h5 class="card-header">입고내역</h5>
		<div class="card-body">
			<div class="table-responsive">
				<div id="DataTables_Table_0_wrapper" class="dataTables_wrapper dt-bootstrap4">
					<div class="row">
						<div class="col-sm-12 col-md-6">
						</div>
						<div class="col-sm-12 col-md-6">
						</div>
					</div>
					<div class="row">
						<div class="col-sm-12">
							<table class="table table-striped table-bordered first dataTable" id="DataTables_Table_0" role="grid" aria-describedby="DataTables_Table_0_info">
								<thead>
									<tr role="row">
										<th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 63.6406px;">No</th>
										<th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending" style="width: 50.9844px;">Parts Name</th>
										<th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending" style="width: 50.9844px;">Amount</th>
										<th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 97.25px;">Client</th>
										<th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Age: activate to sort column ascending" style="width: 25.7344px;">Date</th>
										<th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Age: activate to sort column ascending" style="width: 25.7344px;">Manager</th>
								</thead>
								<tbody>



									@foreach (var data in Model)
									{
										<tr role="row" class="@(row_count % 2 == 1 ? "odd" : "even")">
											<td class="sorting_1">@(data.Id)</td>
											<td class="sorting_1">@(data.Product)</td>
											<td class="sorting_1">@(data.Amount)</td>
											<td class="sorting_1">@(data.Vendor)</td>
											<td class="sorting_1">@(data.RegDate)</td>
											<td class="sorting_1">@(data.Contact)</td>
										</tr>

										row_count++;
									}




								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
