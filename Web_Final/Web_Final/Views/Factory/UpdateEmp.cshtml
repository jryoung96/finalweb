@*
    경영지원부 >> 사원수정
*@
@{
}
<link rel="stylesheet" type="text/css" href="~/css/manage.css" />
<div class="container mt-5">
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="section-block" id="basicform">
                <h3 class="section-title">부서이동</h3>
                <p>사원의 부서를 이동합니다.</p>
            </div>
            <div class="card">
                <h5 class="card-header">Update</h5>
                <div class="card-body">
                    <form method="post" action="/Factory/UpdateEmp" name="update" id="update">
                        <h2>사원정보 수정</h2><hr />
                        <input type="text" id="code" name="p_code" class="form-control" placeholder="사원ID 입력" style="margin-bottom: 0;" />
                        <br />
                        <div class="form-row">
                            <select name="p_department" class="form-control" id="dept">
                                <option value="none">부서를 선택하세요</option>
                                <option value="001">경영지원팀</option>
                                <option value="002">구매팀</option>
                                <option value="003">생산팀</option>
                            </select>
                        </div>
                        <br />
                        <button class="btn btn-primary" id="edit" type="button">수정하기</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/script.js"></script>


