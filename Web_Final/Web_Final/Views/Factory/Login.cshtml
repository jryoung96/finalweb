
@*
    로그인
*@
@{
    Layout = null;
}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Login</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="../assets/vendor/bootstrap/css/bootstrap.min.css">
    <link href="../assets/vendor/fonts/circular-std/style.css" rel="stylesheet">
    <link rel="stylesheet" href="../assets/libs/css/style.css">
    <link rel="stylesheet" href="../assets/vendor/fonts/fontawesome/css/fontawesome-all.css">
    <style>
       
        html,
        body {
            height: 100%;
        }

        body {
            display: -ms-flexbox;
            display: flex;
            -ms-flex-align: center;
            align-items: center;
            padding-top: 40px;
            padding-bottom: 40px;
        }

       
        .splash-container {
            max-width: 400px; /* 원하는 폼 너비로 조절하세요 */
            margin: auto;
        }

        .card {
            border: none;
            box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #f8f9fa; /* 카드 헤더의 배경색 설정 */
            border-bottom: none;
            padding-bottom: 0;
        }

        .logo-img {
            width: 350px; /* 원하는 로고 이미지의 크기로 조절하세요 */
            height: 150px;
        }

        .form-control-lg {
            padding: 20px; /* 원하는 폼 컨트롤의 패딩을 조절하세요 */
            font-size: 18px; /* 원하는 폰트 크기로 조절하세요 */
        }

        .btn-primary {
            font-size: 20px; /* 원하는 버튼 폰트 크기로 조절하세요 */
            padding: 15px; /* 원하는 버튼의 패딩을 조절하세요 */
        }
    </style>

</head>

<body>
    <!-- ============================================================== -->
    <!-- login page  -->
    <!-- ============================================================== -->
    <div class="splash-container">
        <div class="card ">
            <div class="card-header text-center"><img class="logo-img" src="~/assets/images/logo3.png"  alt="logo"><span class="splash-description"></span></div>
            <div class="card-body">
                <form method="post" action="/Factory/Login" name="login" id="login">
                    <div class="form-group">
                        <input class="form-control form-control-lg" name ="userid" id="userid" type="text" placeholder="아이디" autocomplete="off">
                    </div>
                    <div class="form-group">
                        <input class="form-control form-control-lg" id="pw" type="password" placeholder="패스워드" name="userpw">
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg btn-block">로그인</button>
                </form>
            </div>
        </div>
    </div>

    <!-- ============================================================== -->
    <!-- end login page  -->
    <!-- ============================================================== -->
    <!-- Optional JavaScript -->
    <script src="../assets/vendor/jquery/jquery-3.3.1.min.js"></script>
    <script src="../assets/vendor/bootstrap/js/bootstrap.bundle.js"></script>
</body>

</html>

<script src="~/js/script.js"></script>
